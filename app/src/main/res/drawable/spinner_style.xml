<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" android:drawable="@drawable/spinnerborder">
    <shape>
        <solid android:color="#ffffff" />
        <corners android:radius="3dp" />
        <padding 
            android:bottom="5dp" 
            android:left="5dp" 
            android:right="5dp" 
            android:top="5dp" />
         <stroke 
            android:width="2dp" 
            android:color="#006699"  />
    </shape>
 </item>
 <!-- spinner_ab_default_new_theme_bs -> this image for corner triangle -->
<item android:drawable="@drawable/spinnerborder">
    <shape>
        <solid android:color="#ffffff" />
        <corners android:radius="2dp" />
        <padding
            android:bottom="3dp" 
            android:left="5dp" 
            android:right="5dp" 
            android:top="3dp" />
         <stroke
            android:width="1dp" 
            android:color="#000000"/>
    </shape>
</item>
</selector>